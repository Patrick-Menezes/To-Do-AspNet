@model To_do_AspNet.Models.Activity

@{

}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Nome</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
             <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descrição</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CreatAt" class="control-label">Data da criação</label>
                <input type="datetime-local" asp-for="CreatAt" class="form-control" />
                <span asp-validation-for="CreatAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />         
                <div class="form-group">
                    <label asp-for="DateLimit" class="control-label">Data para entrega</label>
                    <input type="datetime-local" asp-for="DateLimit" class="form-control" />
                    <span asp-validation-for="DateLimit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br />
                <input type="submit" value="AddTask" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

