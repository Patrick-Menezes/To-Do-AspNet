@model To_do_AspNet.Models.Activity

@{

}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CreatAt" class="control-label">Creation</label>
                <input type="datetime-local" asp-for="CreatAt" class="form-control" />
                <span asp-validation-for="CreatAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <div class="form-group">
               
                    <div class="form-group">
                        <label asp-for="DateLimit" class="control-label">Final date</label>
                        <input type="datetime-local" asp-for="DateLimit" class="form-control" />
                        <span asp-validation-for="DateLimit" class="text-danger"></span>
                    </div>
                    <td>
                        <div class="form-check form-switch">
                            <input asp-for="IsCompleted" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">IsCompleted</label>
                        </div>


                    </td>




                    <br />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

