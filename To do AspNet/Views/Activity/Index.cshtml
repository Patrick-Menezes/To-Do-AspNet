@model IEnumerable<To_do_AspNet.Models.Activity>



@{
    
    ViewData["Title"] = "Tasks";
   
}

<h1>@ViewData["Title"]</h1>


<p> <a asp-action="newTask">New Task</a></p>

<table class="table table-striped table-success table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=> model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateLimit)
            </th>
            <th>
                Days Left
            </th>   
            <th>
                Completed
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var task in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor( Model => task.Title)
                </td>

                <td>
                    @Html.DisplayFor(Model => task.Description)
                </td>

                <td>
                    @Html.DisplayFor(Model => task.DateLimit)
                </td>

                <td>
                    @Html.DisplayFor(Model => task.Daysleft)
                </td>

                <td>
                    
                    @Html.CheckBoxFor(Model => task.IsCompleted, new { @class = "custom-control-input", disabled = "disabled" })

                </td>

             


                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@task.Id">Delete</a> 
                </td>

            </tr>
        }

    </tbody>

</table>


