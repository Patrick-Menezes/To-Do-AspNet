@model IEnumerable<To_do_AspNet.Models.Activity>

@{

    ViewData["Title"] = "Tasks";

 

}

<h1>@ViewData["Title"]</h1>


<p> <a asp-action="newTask">New Task</a></p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=> model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
               Completed
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var task in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor( Model => task.Title)
                </td>
                <td>
                    @Html.DisplayFor(Model => task.Description)
                </td>
                <td>
                    @Html.DisplayFor(Model => task.IsCompleted)
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@task.Id">Deletar</a> 
                </td>

            </tr>
        }

    </tbody>

</table>


